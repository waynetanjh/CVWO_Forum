<div class="container">
    <div class="row justify-content-center sign-up-form">
      <div class="col-12 col-md-8">
        <div class="card">
          <div class="card-body">
            <h3 class="text-center">Edit Post</h3>
            <%= form_with model: @post, local: true, html: { class: "w-100" } do |f| %>
              <div class="form-group">
                <%= f.label :Title, class: "form-label" %>
                <%= f.text_field :post_title, placeholder: "Enter the title", class: "form-control", autofocus: true %>
              </div>

              <div class="form-group">
                <%= f.label :topic, class: "form-label" %>
                <%= f.select :topic, options_for_select(['Finance', 'General', 'Lifestyle']), {}, class: "form-control", id: "exampleFormControlSelect1" %>
              </div>

              <div class="form-group">
                <%= f.label :Content, class: "form-label" %>
                <%= f.text_area :content, placeholder: "Enter the content", class: "form-control", autofocus: true %>
              </div>
  
              <div class="form-group text-center">
                <%= f.submit "Post", class: "btn btn-primary" %>
              </div>
            <% end %>
            
            <div class="text-right">
                <%= form_with(model: @post, method: :delete, class: "delete-form") do |form| %>
                    <%= form.submit "Delete Post", class: "btn btn-danger" %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>