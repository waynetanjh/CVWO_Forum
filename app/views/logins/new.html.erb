<div class="container">
    <div class="row justify-content-center sign-up-form">
      <div class="col-12 col-md-8" id="header1">
        <div class="card">
          <div class="card-body">
            <h3 class="text-center">Log in</h3>
            <%= form_with url: login_path, local: true, html: { class: "w-100" } do |f| %>
  
              <div class="form-group">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, placeholder: "Enter your email", class: "form-control", autofocus: true%>
              </div>
              
              <div class="form-group">
                <%= f.label :password, class: "form-label" %>
                <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
              </div>
  
              <div class="form-group text-center">
                <%= f.submit "Login", class: "btn btn-primary" %>
              </div>
            <% end %>

            <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">New around here? Sign up</a>
                <a class="dropdown-item" href="#">Forgot password?</a>
          </div>
        </div>
      </div>
    </div>
  </div>